<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header-wrapper">
            <block class="Aheadworks\Sarp\Block\Cart\Link" name="aw_sarp.cart.link" after="minicart"
                   template="Aheadworks_Sarp::cart_link.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="types" xsi:type="array"/>
                        <item name="components" xsi:type="array">
                            <item name="subscriptionCart" xsi:type="array">
                                <item name="component" xsi:type="string">Aheadworks_Sarp/js/ui/view/cart-link</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
