	// Plus-minus qty feature
	require([
			'jquery'
		],
		function($) {
			$('.qty .qty-inc').click(function() {
				var $input = $(this).parent().find('input.qty');
				var val = parseInt($input.val()) + parseInt($(this).attr('data-inc'));
				if ( !val ) val = 1;
				$input.val(val);
			});
		}
	);

</script>